                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"libportal-\" + $version + \".tar.xz\") | .browser_download_url"
                    }
                }
            ]
        },
        {
            "name": "epiphany",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/epiphany/43/epiphany-43.0.tar.xz",
