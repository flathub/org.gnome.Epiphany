                        {
                            "type": "git",
                            "url": "https://github.com/sass/sassc.git",
                            "tag": "3.6.2",
                            "x-checker-data": {
                                "type": "git",
                                "tag-pattern": "^([\\d.]+)$"
                            },
                            "commit": "66f0ef37e7f0ad3a65d2f481eff09d09408f42d0"
                        },
                        {
                            "type": "script",
                            "dest-filename": "autogen.sh",
                            "commands": [
                                "autoreconf -si"
                            ]
                        }
                    ],
                    "modules": [
                        {
                            "name": "libsass",
                            "cleanup": [
                                "*"
                            ],
                            "sources": [
                                {
                                    "type": "git",
                                    "url": "https://github.com/sass/libsass.git",
                                    "tag": "3.6.5",
                                    "x-checker-data": {
