        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--system-talk-name=org.freedesktop.GeoClue2"
    ],
    "modules": [
        {
            "name": "elementary-icons",
            "buildsystem": "meson",
